<h1>Listing schedules</h1>

<table>
  <tr>
    <th>Ym</th>
    <th>Date</th>
    <th>Live house</th>
    <th>Title</th>
    <th>Desc</th>
    <th>Permlink</th>
  </tr>

<% @schedules.each do |schedule| %>
  <tr>
    <td><%=h schedule.ym %></td>
    <td><%=h schedule.date %></td>
    <td><%=h schedule.live_house_id %></td>
    <td><%=h schedule.title %></td>
    <td><%=h schedule.desc %></td>
    <td><%=h schedule.permlink %></td>
    <td><%= link_to 'Show', schedule %></td>
    <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
    <td><%= link_to 'Destroy', schedule, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

